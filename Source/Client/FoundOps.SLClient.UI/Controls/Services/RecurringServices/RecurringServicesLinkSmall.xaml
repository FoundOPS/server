<UserControl x:Class="FoundOps.Framework.Views.Controls.Services.RecurringServices.RecurringServicesLinkSmall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ViewModelLocator="clr-namespace:MEFedMVVM.ViewModelLocator;assembly=MEFedMVVM.SL"
     mc:Ignorable="d"
     d:DesignWidth="300" ViewModelLocator:ViewModelLocator.SharedViewModel="RecurringServicesVM">
    <Grid x:Name="LayoutRoot">
        <ListBox ItemsSource="{Binding DomainCollectionView}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ServiceTemplate.Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
