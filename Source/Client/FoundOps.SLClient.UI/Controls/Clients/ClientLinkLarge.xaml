<UserControl x:Class="FoundOps.SLClient.UI.Controls.Clients.ClientLinkLarge" x:Name="myClientLinkLarge" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
             xmlns:Controls="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Input" xmlns:ViewModelLocator="clr-namespace:MEFedMVVM.ViewModelLocator;assembly=MEFedMVVM.SL" 
             xmlns:Clients="clr-namespace:FoundOps.SLClient.UI.Controls.Clients" xmlns:autocomplete="clr-namespace:FoundOps.Common.Silverlight.UI.Controls.AutoComplete;assembly=FoundOps.Common.Silverlight.UI"
             xmlns:Services="clr-namespace:FoundOps.SLClient.Data.Services;assembly=FoundOps.SLClient.Data"
             mc:Ignorable="d" ViewModelLocator:ViewModelLocator.SharedViewModel="ClientsVM">
    <Grid x:Name="LayoutRoot">
        <toolkit:Expander Margin="5" Style="{StaticResource ExpanderStyle}" IsExpanded="true" Foreground="{StaticResource ClientBrush}" BorderBrush="{StaticResource ClientBrush}">
            <toolkit:Expander.Header>
                <TextBlock Text="Client" Margin="0,3,5,3" FontSize="13" Foreground="{StaticResource ClientBrush}" />
            </toolkit:Expander.Header>
            <Controls:RadComboBox x:Name="ClientsRadComboBox" Margin="5,3,5,3" Foreground="Black" MinWidth="100" IsEditable="True" IsFilteringEnabled="True"
                    TextSearchMode="Contains" DisplayMemberPath="OwnedParty.DisplayName" 
                    autocomplete:AutocompleteBehavior.MinimumTextLength="0" autocomplete:AutocompleteBehavior.GetItemsDelay="0:0:2"
                    SelectedValue="{Binding SelectedClient, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Clients:ClientLinkLarge}}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource NotExistsBoolConverter}}" EditableTemplate="{StaticResource SL5BugWorkaround}">
                <autocomplete:AutocompleteBehavior.AutocompleteProvider>
                    <Services:ClientsAutocompleteProvider/>
                </autocomplete:AutocompleteBehavior.AutocompleteProvider>
            </Controls:RadComboBox>
        </toolkit:Expander>
    </Grid>
</UserControl>