<UserControl x:Class="FoundOps.Framework.Views.Controls.Files.FilesGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:telerik="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.GridView" mc:Ignorable="d"
    d:DesignWidth="400">

    <telerik:RadGridView ShowGroupPanel="False" AutoGenerateColumns="False" RowIndicatorVisibility="Collapsed">
        <telerik:RadGridView.Columns>
            <telerik:GridViewImageColumn/><!--Bind to file preview-->
            <telerik:GridViewDataColumn Header="Name"/><!--Bind to file name-->
            <telerik:GridViewDataColumn Header="Type" Width="*"/><!--Bind to file Type-->
        </telerik:RadGridView.Columns>
    </telerik:RadGridView>
</UserControl>
