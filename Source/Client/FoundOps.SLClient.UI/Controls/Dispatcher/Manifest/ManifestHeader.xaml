<UserControl x:Class="FoundOps.SLClient.UI.Controls.Dispatcher.Manifest.ManifestHeader" x:Name="myManifestHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Converters="clr-namespace:FoundOps.Common.Silverlight.Converters;assembly=FoundOps.Common.Silverlight.UI"
             xmlns:ViewModels="clr-namespace:FoundOps.SLClient.UI.ViewModels;assembly=FoundOps.SLClient.UI" xmlns:Tools1="clr-namespace:FoundOps.SLClient.UI.Tools" 
             mc:Ignorable="d">
    <!--Do not remove ViewModels, it is used by GetVM-->
    <UserControl.Resources>
        <Converters:DateTimeToLongDateConverter x:Key="DateTimeToLongDateConverter"/>
    </UserControl.Resources>
    <StackPanel x:Name="LayoutRoot" HorizontalAlignment="Center" Width="750" Margin="25,0,0,0" DataContext="{Tools1:GetVM Type=ViewModels:RoutesVM}" 
          Visibility="{Binding RouteManifestVM.RouteManifestSettings.IsHeaderVisible, Converter={StaticResource VisibilityConverter}}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="1" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Text="{Binding SelectedEntity.Name}" 
                   Visibility="{Binding RouteManifestVM.RouteManifestSettings.IsRouteNameVisible, Converter={StaticResource VisibilityConverter}}"/>
            <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Text="{Binding SelectedEntity.Date, Converter={StaticResource DateTimeToLongDateConverter}}"
                                   Visibility="{Binding RouteManifestVM.RouteManifestSettings.IsRouteDateVisible, Converter={StaticResource VisibilityConverter}}"/>
            <Rectangle Grid.Row="2" Grid.ColumnSpan="3" Margin="0,5" Height="2" Fill="Black" 
                       Visibility="{Binding RouteManifestVM.RouteManifestSettings.IsRouteNameVisible, Converter={StaticResource VisibilityConverter}}"/>
        </Grid>
    </StackPanel>
</UserControl>
