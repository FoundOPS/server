<controls:ChildWindow x:Name="myAlgorithmStatus" x:Class="FoundOps.SLClient.UI.Controls.Dispatcher.AlgorithmStatus" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                      xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                      Width="400" Height="300" Title="Algorithm Calculation Status" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2" DataContext="{Binding AlgorithmVM, ElementName=myAlgorithmStatus}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <telerik:RadProgressBar HorizontalAlignment="Center" Minimum="0" Maximum="100" Value="{Binding PercentProgress}" Width="260" Height="30" Margin="0,20" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center" FontSize="12" FontWeight="Bold" Text="Estimated Time Remaining: " />
            <TextBlock VerticalAlignment="Center" FontSize="12" FontWeight="Bold" Text="{Binding TimeRemaining}" />
        </StackPanel>
        <Button HorizontalAlignment="Center" Grid.Row="2" Width="130" Height="30" Content="Cancel" Command="{Binding CancelCommand}" />
    </Grid>
</controls:ChildWindow>