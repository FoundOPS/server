<UserControl x:Class="FoundOps.Common.Silverlight.UI.Controls.AddEditDelete.AddToDeleteFrom" x:Name="myAddToDeleteFrom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:AddEditDelete="clr-namespace:FoundOps.Common.Silverlight.UI.Controls.AddEditDelete" xmlns:MarkupExtensions="clr-namespace:FoundOps.Common.Silverlight.UI.Tools.MarkupExtensions"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" xmlns:Converters="clr-namespace:FoundOps.Common.Silverlight.Converters" 
             mc:Ignorable="d">
    <UserControl.Resources>
        <Converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
        <DataTemplate x:Key="AddMenuTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Label, Source={MarkupExtensions:RootElement}}" />
                <sdk:AutoCompleteBox x:Name="AutoCompleteBox" Grid.Row="1" MinWidth="120" MinimumPopulateDelay="200" MinimumPrefixLength="0"
                                     Populating="AutoCompleteBoxPopulating"
                                     DataContext="{MarkupExtensions:RootElement}" Text="{Binding ExistingItemsComboBoxText, Mode=TwoWay}" 
                                     SelectedItem="{Binding SelectedExistingItem, Mode=TwoWay}" ValueMemberPath="{MarkupExtensions:Resolver Source={Binding Source.MemberPath, Source={MarkupExtensions:RootElement}}}">
                    <sdk:AutoCompleteBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{MarkupExtensions:IndirectBinder Path={MarkupExtensions:Resolver Source={Binding Source.MemberPath, Source={MarkupExtensions:RootElement}}}}"/>
                        </DataTemplate>
                    </sdk:AutoCompleteBox.ItemTemplate>
                </sdk:AutoCompleteBox>
                <StackPanel Orientation="Horizontal" Margin="5,2,0,0" Grid.Row="2">
                    <Button Grid.Row="2" Content="Add New" Margin="0,2,0,0" Click="AddNewButtonClick" 
                            Visibility="{Binding AddMode, ConverterParameter=AddNewExisting, Converter={StaticResource EnumToVisibilityConverter}, Source={MarkupExtensions:RootElement}}" 
                            IsEnabled="{Binding SelectedItem, ElementName=AutoCompleteBox, Converter={StaticResource NotExistsBoolConverter}}"/>
                    <Button Grid.Row="2" Content="Add Existing" Margin="3,2,0,0" Click="AddExistingButtonClick" 
                            IsEnabled="{Binding SelectedItem, ElementName=AutoCompleteBox, Converter={StaticResource ExistsBoolConverter}}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <AddEditDelete:AddDelete x:Name="AddDelete" AddDeleteMode="AddDelete" AddMenuItemCustomTemplate="{StaticResource AddMenuTemplate}" 
                                 Add="AddDelete_OnAdd" Delete="AddDelete_OnDelete" />
    </Grid>
</UserControl>