@model FoundOps.Core.Models.Authentication.ChangePasswordModel
@{
    Layout = "../Shared/Master.cshtml";
}
<div id="captchaPage">
    @using (Html.BeginForm("ChangePassword", "Account"))
    { 
        <fieldset id="captchaFieldset" style="width: 340px; margin-left: -10px">
            <legend>Change Password</legend>
            @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
            @Html.ValidationMessageFor(m => m.OldPassword)<br />
            @Html.LabelFor(m => m.OldPassword)<br />
            @Html.PasswordFor(m => m.OldPassword)<br />
            <br />
            @Html.ValidationMessageFor(m => m.NewPassword)<br />
            @Html.LabelFor(m => m.NewPassword)<br />
            @Html.PasswordFor(m => m.NewPassword)<br />
            <br />
            @Html.ValidationMessageFor(m => m.ConfirmPassword)<br />
            @Html.LabelFor(m => m.ConfirmPassword)<br />
            @Html.PasswordFor(m => m.ConfirmPassword)<br />
            <br />
            <input id="loginPageBtn" style="width: 130px" type="submit" value="Change Password" />
        </fieldset>
    }
</div>